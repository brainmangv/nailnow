<?xml version='1.0' encoding='utf-8'?>
<widget id="co.nailnow.app" version="0.0.98" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nailnow</name>
    <description>
        Manicure a qualquer hora.
    </description>
    <author email="dev@nailnow.co" href="http://nailnow.co">
        Ricardo Ramos
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access origin="cdvfile://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="google.streetview:*" />
    <allow-intent href="google.navigation:*" />    
    <allow-intent href="cdvfile://*" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="android-targetSdkVersion" value="21" />
    <preference name="android-installLocation" value="auto" />    
    <preference name="orientation" value="portrait" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="SplashScreenDelay" value="10000" />
    <icon src="icon.png"/>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon  src="images/36x36.png" density="ldpi" width="36" height="36"/>
        <icon  src="images/48x48.png" density="mdpi" width="48" height="48"/>
        <icon  src="images/72x72.png" density="hdpi" width="72" height="72"/>
        <icon  src="images/96x96.png" density="xhdpi" width="96" height="96"/>
        <splash src="images/320x426.png" density="ldpi" width="320" height="426" orientation="portrait"/>
        <splash src="images/320x470.png" density="mdpi" width="320" height="470" orientation="portrait"/>
        <splash src="images/480x640.png" density="hdpi" width="480" height="640" orientation="portrait"/>
        <splash src="images/720x960.png" density="xhdpi" width="720" height="960" orientation="portrait"/>
        <feature name="SocialSharing">
            <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
        </feature>
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="deployment-target" value="7.0" />
        <splash src="images/320x480.png" />
        <icon src="images/icon-60@3x.png" width="180" height="180" />
        <icon src="images/icon-60@2x.png" width="120" height="120" />        
        <feature name="SocialSharing">
          <param name="ios-package" value="SocialSharing" />
        </feature>
    </platform>
   
    <plugin spec="https://github.com/Initsogar/cordova-webintent.git" source="git" />
    <plugin name="cordova-plugin-keepe-cardio" source="npm" />
    <plugin name="cordova-plugin-app-version" source="npm" />
    <plugin name="cordova-plugin-background-mode" />
    <plugin name="cordova-plugin-compat" source="npm" />
    <plugin name="cordova-plugin-device" source="npm" />
    <plugin name="cordova-plugin-dialogs" source="npm" />
    <plugin name="cordova-plugin-geolocation" source="npm" />
    <plugin name="cordova-plugin-network-information" source="npm" />
    <plugin name="cordova-plugin-request-location-accuracy" source="npm" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-statusbar" source="npm" />
    <plugin name="cordova-plugin-vibration" source="npm" />    
    <plugin spec="https://github.com/Viras-/cordova-plugin-powermanagement.git" source="git" />
    <plugin name="cordova-plugin-x-socialsharing" source="npm" />

    <plugin name="phonegap-plugin-push" source="npm" >    
        <param name="SENDER_ID" value="499027471276"/>
    </plugin>

    <plugin name="cordova-plugin-facebook4" spec="~1.7.1" source="npm">
        <param name="APP_ID" value="537031369755381" />
        <param name="APP_NAME" value="nailnow" />
    </plugin>
